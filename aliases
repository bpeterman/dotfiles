# general aliases
alias grepstaged='git diff --name-only --cached | xargs grep'
alias gsl='git stash list --pretty=format:"%C(red)%h%C(reset) - %C(dim yellow)(%C(bold magenta)%gd%C(dim yellow))%C(reset) %<(70,trunc)%s %C(green)(%cr) %C(bold blue)<%an>%C(reset)"'
alias grepchanged='git diff --name-only | xargs grep'
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gd='git diff'
alias gds='git diff --staged'
alias ll='ls -lshtr'
alias grep="grep --color=always"

